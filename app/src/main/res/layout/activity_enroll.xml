<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.jfkj.im.ui.party.EnrollActivity">

    <include layout="@layout/include_title_finsih" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="25dp"
        android:orientation="horizontal">

        <View
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="3dp"
            android:background="@drawable/shap_shu_line_bg" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="报名参加"
            android:textColor="@color/white"
            android:textSize="17sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal">


        <TextView
            android:layout_width="52dp"
            android:layout_height="18dp"
            android:text="聚会主题"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/shap_shu_bg"
            android:textColor="@color/line_btn"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="19dp"
            android:textColor="@color/white"
            android:textSize="15sp"
            tools:text="周一不蹦迪明天变垃圾" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal">


        <TextView
            android:layout_width="52dp"
            android:layout_height="18dp"
            android:text="聚会时间"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/shap_shu_bg"
            android:textColor="@color/line_btn"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="19dp"
            android:textColor="@color/white"
            android:textSize="15sp"
            tools:text="10月16日 下午10:30" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal">


        <TextView
            android:layout_width="52dp"
            android:layout_height="18dp"
            android:text="聚会地点"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/shap_shu_bg"
            android:textColor="@color/line_btn"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="19dp"
            tools:text="成都·CAGO"
            android:textColor="@color/white"
            android:textSize="15sp" />

    </LinearLayout>


    <RelativeLayout
        android:id="@+id/rl_select_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="18dp">

        <TextView
            android:id="@+id/tv_time_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="到场时间"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/shap_shu_bg"
            android:textColor="@color/line_btn"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_select_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/tv_time_1"
            android:layout_marginStart="19dp"
            android:layout_marginEnd="10dp"
            android:text="请选择"
            android:textColor="@color/cFF2B66"
            android:textSize="13sp" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="13dp"
            android:layout_toEndOf="@+id/tv_select_time"
            android:src="@drawable/arrow_right" />




    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:visibility="gone"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="18dp"
        android:layout_marginRight="15dp"
        android:background="#E5E5E5FF" />


    <TextView
        android:id="@+id/tv_enroll"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="38dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/shap_bt_two_bg"
        android:gravity="center"
        android:text="确认报名"
        android:textColor="@color/black"
        android:textSize="16sp" />

</LinearLayout>
    