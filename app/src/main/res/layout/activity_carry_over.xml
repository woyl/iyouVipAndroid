<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/color_ffffff"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.jfkj.im.ui.mine.CarryOverActivity">

    <include
        android:id="@+id/layout_title"
        layout="@layout/include_base_back_blacd_title"/>

    
    
    <RelativeLayout
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_caaryover_brg"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:layout_width="match_parent"
        android:layout_height="100dp">


        <ImageView

            android:id="@+id/iv_blank"
            android:src="@drawable/icon_send_red"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:layout_width="45dp"
            android:layout_height="45dp"/>



        <LinearLayout
            android:orientation="vertical"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_blank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_bank_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" "
                android:textColor="#ff000000"
                android:textSize="14sp"
                />

            <TextView
                android:id="@+id/tv_card"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" "
                android:textColor="#ff666666"
                android:textSize="14sp"
                />
        </LinearLayout>

    </RelativeLayout>



    <TextView
        android:id="@+id/tv_max_money"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="最高可结算：¥ 0 "
        android:textColor="#ff000000"
        android:textSize="14sp"
        />



    <LinearLayout
        android:gravity="center_vertical"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView

            android:layout_width="15dp"
            android:layout_height="35dp"
            android:text="¥"
            android:textColor="#ff000000"
            android:textSize="25sp"
            />

        <EditText
            android:background="@null"
            android:maxLines="1"
            android:id="@+id/ed_money"
            android:layout_marginStart="5dp"
            android:textColor="#ff000000"
            android:numeric="integer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <View
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"

        android:background="@color/color_e5e5e5" />



    <TextView
        android:clickable="false"
        android:id="@+id/tv_submit"
        android:gravity="center"
        android:alpha="0.5"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/shape_bg_ten_huise"
        android:text="申请"
        android:textColor="#ffffffff"
        android:textSize="16sp"
        android:layout_width="match_parent"
        android:layout_height="45dp"/>

</LinearLayout>
