<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_club_dialog"
    android:layout_marginLeft="23dp"
    android:layout_marginRight="23dp"
    android:orientation="vertical">

    <TextView
        android:textSize="13sp"
        android:id="@+id/create_club_tv"
        style="@style/style_club_tv"
        android:background="@drawable/shape_base_btn_f3f1f6_3dp"
        android:text="创建俱乐部"
        android:gravity="center"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:textSize="13sp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/create_club_tv"
        android:id="@+id/add_club_tv"
        android:background="@drawable/shape_base_btn_f3f1f6_3dp"
        android:text="加入俱乐部"
        style="@style/style_club_tv"
        android:layout_marginTop="20dp"
        tools:ignore="MissingConstraints" />
    <TextView
        android:text="取消"
        app:layout_constraintTop_toBottomOf="@id/add_club_tv"
        android:id="@+id/cancel_tv"
        android:layout_width="match_parent"
        android:paddingTop="19dp"
        android:paddingBottom="18dp"
        android:textSize="14sp"
        android:textColor="@color/cEF4769"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>