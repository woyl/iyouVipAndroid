<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <include
        android:id="@+id/layout_title"
        layout="@layout/include_base_back_title" />
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ll_layout"
        android:gravity="center"
        android:orientation="vertical"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_marginBottom="10dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="网络错误"
            android:textColor="#ff000000"
            android:textSize="17sp"
            />

        <TextView
            android:layout_marginBottom="60dp"
            android:layout_gravity="center"
            android:layout_width="120dp"
            android:layout_height="17dp"
            android:text="请检查网络连接后重试"
            android:textColor="#ff999999"
            android:textSize="12sp"
            />

        <TextView
            android:id="@+id/tv_chong"
            android:gravity="center"
            android:layout_marginTop="60dp"
            android:layout_marginRight="82dp"
            android:layout_marginLeft="82dp"
            android:background="@drawable/shape_bg_ten_black_mini"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="重试"
            android:textColor="#ffffffff"
            android:textSize="16sp"
            />



    </LinearLayout>


    <View
        android:background="@color/color_333333"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>


    <LinearLayout
        android:background="@color/c111111"
        android:id="@+id/layout_balance"
        style="@style/SettingLayout"
        android:layout_height="55dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="余额："
            android:textColor="@color/line_btn"
            android:textSize="13sp" />

        <TextView
            android:drawablePadding="5dp"
            android:id="@+id/tv_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableEnd="@mipmap/icon_diamond_yellow"
            android:gravity="start|center_vertical"
            android:textColor="@color/white"
            android:textSize="13sp"
            tools:text="134" />

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_describe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shap_bt_two_color_bg"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:paddingTop="4dp"
            android:paddingRight="15dp"
            android:paddingBottom="4dp"
            android:text="充值"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:background="@drawable/iv_go_detail" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:visibility="gone"
        android:background="@color/color_e5e5e5" />

    <LinearLayout
        android:background="@color/c111111"
        android:id="@+id/layout_gift"
        style="@style/SettingLayout"
        android:layout_height="55dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="累计送出礼物："
            android:textColor="@color/line_btn"
            android:textSize="13sp" />

        <TextView
            android:drawablePadding="5dp"
            android:id="@+id/tv_gift"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableRight="@mipmap/icon_diamond_yellow"
            android:gravity="start"
            android:textColor="@color/white"
            android:textSize="13sp"
            tools:text="134" />

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/list_icon_more_gray" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:visibility="gone"
        android:background="@color/color_e5e5e5" />


</LinearLayout>