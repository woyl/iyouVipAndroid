<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.StartvideoActivity">


    <TextView
        android:textSize="16sp"
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:gravity="center"
        android:text="IYOU是一个100%全真人的社交平台"
        android:textColor="@color/color_ffffff"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:layout_marginTop="5dp"
        android:textSize="16sp"
        android:id="@+id/tv_record"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="所有人都需要经过视频试镜头"
        android:textColor="@color/color_ffffff"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        tools:ignore="MissingConstraints" />

    <VideoView
        android:id="@+id/videoview"
        android:layout_width="240dp"
        android:layout_height="320dp"
        android:layout_marginTop="30dp"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_record"
        tools:ignore="MissingConstraints" />
    <SurfaceView
        android:id="@+id/surfaceview"
        android:layout_width="240dp"
        android:layout_height="320dp"
        android:layout_marginTop="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_record"
        tools:ignore="MissingConstraints" />
    <Button
        android:textColor="@color/c333333"
        android:id="@+id/btn_start"
        app:layout_constraintTop_toBottomOf="@id/surfaceview"
        android:layout_marginTop="30dp"
        android:background="@drawable/shap_bt_two_bg"
        style="@style/btn_red"
        android:text="开始自拍试镜"
        tools:ignore="MissingConstraints" />
    <TextView
        android:textSize="@dimen/font_12sp"
        android:text="请自拍读出验证码，视频仅供内部试镜使用"
        android:textColor="@color/color_ffffff"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_start"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>