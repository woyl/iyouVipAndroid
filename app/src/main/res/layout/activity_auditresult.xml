<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#161823"
    android:layout_height="match_parent">



    <include
        android:id="@+id/include_title"
        layout="@layout/include_title" />

    <TextView
        android:drawablePadding="5dp"
        android:id="@+id/tv_auditing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="40dp"
        android:drawableLeft="@mipmap/icon_warning"
        android:text="审核未能通过!"
        android:textColor="@color/color_ffffff"
        android:textSize="23sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/include_title"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tv_message1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="26dp"
        android:layout_marginRight="50dp"
        android:text="拒绝理由"
        android:textColor="@color/color_ffffff"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_auditing"
        tools:ignore="MissingConstraints" />




    <Button

        android:textColor="@color/c333333"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:id="@+id/btn_repeat"
        android:text="重新申请"
        android:background="@drawable/shape_base_btn_white_20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_message1"
        tools:ignore="MissingConstraints"
        android:layout_height="45dp"
        android:layout_width="match_parent"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        />
    <Button
        android:textColor="@color/c333333"
        android:layout_height="45dp"
        android:layout_width="match_parent"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="19dp"
        android:gravity="center"
        android:text="回到登录页面"
        android:background="@drawable/shape_base_btn_white_20dp"
        android:id="@+id/btn_back_login"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_repeat"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>