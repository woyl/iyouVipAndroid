<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shap_white_l_r_bg"
    android:orientation="vertical">




    <TextView
        android:layout_marginLeft="15dp"
        android:layout_marginTop="25dp"
        android:layout_width="60dp"
        android:layout_height="21dp"
        android:text="报名参加"
        android:textColor="#ff000000"
        android:textSize="15sp"
        />


    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="见面聚会举办成功才会进行发放，取消或未成功举办将退还钻石。"
        android:textColor="@color/color_666666"
        android:textSize="12sp"
        />


    <RelativeLayout
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="活动总奖励"
            android:textColor="@color/FB8396"
            android:textSize="13sp"
            />


        <TextView
            android:id="@+id/tv_total_money"
            android:drawableRight="@mipmap/icon_diamond_yellow"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10000"
            android:textColor="@color/FB8396"
            android:textSize="13sp"
            />
    </RelativeLayout>


    <View
        android:layout_marginTop="18dp"
        android:background="#E5E5E5FF"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>


    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


         <LinearLayout
             android:id="@+id/ll1"
             android:background="@drawable/shape_tv_money_num"
             android:gravity="center"
             android:layout_width="120dp"
             android:layout_height="36dp">

             <ImageView
                 android:layout_gravity="center"
                 android:src="@mipmap/icon_diamond_yellow"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"/>

             <TextView
                 android:id="@+id/tv1"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="x50000/人"
                 android:textColor="#ff060606"
                 android:textSize="15sp" />

         </LinearLayout>

        <LinearLayout
            android:id="@+id/ll2"
            android:background="@drawable/shape_tv_money_num"
            android:layout_marginLeft="45dp"
            android:gravity="center"
            android:layout_width="120dp"
            android:layout_height="36dp">

            <ImageView
                android:layout_gravity="center"
                android:src="@mipmap/icon_diamond_yellow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv2"
                android:text="x100000/人"
                android:textColor="#ff060606"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>


    </LinearLayout>



    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <LinearLayout
            android:id="@+id/ll3"
            android:background="@drawable/shape_tv_money_num"
            android:gravity="center"
            android:layout_width="120dp"
            android:layout_height="36dp">

            <ImageView
                android:layout_gravity="center"
                android:src="@mipmap/icon_diamond_yellow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv3"
                android:text="x200000/人"
                android:textColor="#ff060606"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll4"
            android:background="@drawable/shape_tv_money_num"
            android:layout_marginLeft="45dp"
            android:gravity="center"
            android:layout_width="120dp"
            android:layout_height="36dp">

            <ImageView
                android:layout_gravity="center"
                android:src="@mipmap/icon_diamond_yellow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv4"
                android:text="x500000/人"
                android:textColor="#ff060606"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>


    </LinearLayout>



    <TextView
        android:id="@+id/tv_submit"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:textColor="@color/color_ffffff"
        android:textSize="16sp"
        android:text="确认"
        android:background="@drawable/shap_bt_two_black_bg"
        android:layout_marginTop="30dp"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:layout_width="match_parent"
        android:layout_height="45dp"/>




</LinearLayout>
