<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.jfkj.im.ui.mine.BindSettleAccountActivity">


    <include
        android:id="@+id/layout_title"
        layout="@layout/include_base_back_title" />


    <RelativeLayout
        android:id="@+id/tl_blank_name"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="开户银行"
            android:textColor="@color/white"
            android:textSize="13sp" />


        <ImageView
            android:id="@+id/iv_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/iv_go_detail" />

        <TextView
            android:id="@+id/tv_bank_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="5dp"
            android:layout_toStartOf="@+id/iv_next"
            android:text=""
            android:textColor="@color/white"
            android:textSize="13sp" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">

        <TextView
            android:id="@+id/tv_account_blank_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="开户名："
            android:textColor="@color/white"
            android:textSize="13sp" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/ed_blank_branch_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toEndOf="@+id/tv_account_blank_name"
            android:background="@null"
            android:layout_marginStart="10dp"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:textSize="13sp" />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:visibility="gone"
        android:background="@color/color_e5e5e5" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">

        <TextView
            android:id="@+id/tv_account_blank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="开户支行："
            android:textColor="@color/white"
            android:textSize="13sp" />


        <EditText
            android:id="@+id/ed_blank_branch"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toEndOf="@+id/tv_account_blank"
            android:background="@null"
            android:layout_marginStart="10dp"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:textColorHint="@color/c767676"
            android:hint="请输入开户支行"
            android:textSize="13sp" />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="15dp"
        android:visibility="gone"
        android:layout_marginRight="15dp"
        android:background="@color/color_e5e5e5" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">


        <TextView
            android:id="@+id/tv_account_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="银行卡号："
            android:textColor="@color/white"
            android:textSize="13sp" />


        <EditText
            android:id="@+id/ed_bank_card"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toEndOf="@+id/tv_account_card"
            android:background="@null"
            android:hint="请输入银行卡号"
            android:layout_marginStart="10dp"
            android:textColorHint="@color/c767676"
            android:textColor="@color/white"
            android:textSize="13sp" />


    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:visibility="gone"
        android:background="@color/color_e5e5e5" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">


        <TextView
            android:id="@+id/tv_account_card_r"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="再次输入："
            android:textColor="@color/white"
            android:textSize="13sp" />


        <EditText
            android:id="@+id/ed_bank_card_repeat"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toEndOf="@+id/tv_account_card_r"
            android:textColor="@color/white"
            android:layout_marginStart="10dp"
            android:textColorHint="@color/c767676"
            android:background="@null"
            android:hint="请输入银行卡号"
            android:textSize="13sp" />

    </RelativeLayout>


    <TextView
        android:id="@+id/tv_submit"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="40dp"
        android:alpha="0.5"
        android:background="@drawable/shap_bt_two_bg"
        android:clickable="false"
        android:gravity="center"
        android:text="确定"
        android:textColor="@color/black"
        android:textSize="16sp" />


</LinearLayout>
