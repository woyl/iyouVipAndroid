<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_211C29">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circleimageview"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="166dp"
        android:background="@drawable/default_head_iv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"></de.hdodenhof.circleimageview.CircleImageView>

    <TextView
        android:id="@+id/tv_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="用户名"
        android:textColor="@color/color_ffffff"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/circleimageview"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tv_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="邀请你进行视频通话"
        android:textColor="@color/color_ffffff"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_user_name"
        tools:ignore="MissingConstraints" />

    <ImageButton

        android:id="@+id/btn_refuse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="64dp"
        android:layout_marginTop="140dp"
        android:background="@mipmap/call_btn_refuse_red"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_hint"
        tools:ignore="MissingConstraints" />

    <ImageButton
        android:id="@+id/btn_accept"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp"
        android:layout_marginRight="64dp"
        android:background="@mipmap/call_btn_agree_green"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_hint"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tv_refuse"
        app:layout_constraintTop_toBottomOf="@+id/btn_refuse"
        app:layout_constraintRight_toRightOf="@+id/btn_refuse"
        android:paddingTop="15dp"
        app:layout_constraintLeft_toLeftOf="@+id/btn_refuse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="拒绝"
        android:textColor="@color/color_ffffff"
        android:textSize="12sp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tv_accept"
        app:layout_constraintTop_toBottomOf="@+id/btn_accept"
        app:layout_constraintRight_toRightOf="@+id/btn_accept"
        android:paddingTop="15dp"
        app:layout_constraintLeft_toLeftOf="@+id/btn_accept"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="接听"
        android:textColor="@color/color_ffffff"
        android:textSize="12sp"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>