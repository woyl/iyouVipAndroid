<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_charge"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/color_ff000000"
        android:textSize="15sp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="充值¥"/>

    <TextView
        android:id="@+id/tv_charge_number"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/color_ff000000"
        android:textSize="15sp"
        app:layout_constraintLeft_toRightOf="@+id/tv_charge"
        app:layout_constraintTop_toTopOf="@+id/tv_charge"
        app:layout_constraintBottom_toBottomOf="@+id/tv_charge"
        tools:text="12"/>

    <TextView
        android:id="@+id/tv_diamond_number"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/color_ff4d6c"
        android:textSize="15sp"
        android:layout_marginRight="15dp"
        app:layout_constraintTop_toTopOf="@+id/tv_charge"
        app:layout_constraintBottom_toBottomOf="@+id/tv_charge"
        app:layout_constraintRight_toRightOf="parent"
        tools:text="+12"/>

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/color_999999"
        android:textSize="12sp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_charge"
        app:layout_constraintLeft_toLeftOf="@+id/tv_charge"
        tools:text="2019-11-28 14:57:35"/>

    <TextView
        android:id="@+id/tv_total_diamond"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textColor="@color/color_999999"
        android:textSize="12sp"
        android:gravity="center"
        android:drawablePadding="2dp"
        android:drawableRight="@mipmap/icon_diamond_yellow"
        app:layout_constraintTop_toBottomOf="@+id/tv_diamond_number"
        app:layout_constraintRight_toRightOf="@+id/tv_diamond_number"
        tools:text="256"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/color_999999"
        android:textSize="12sp"
        android:gravity="center"
        app:layout_constraintRight_toLeftOf="@+id/tv_total_diamond"
        app:layout_constraintTop_toTopOf="@+id/tv_total_diamond"
        app:layout_constraintBottom_toBottomOf="@+id/tv_total_diamond"
        android:text="余额："/>

    <View
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:background="@color/color_e5e5e5"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_time"/>
</androidx.constraintlayout.widget.ConstraintLayout>