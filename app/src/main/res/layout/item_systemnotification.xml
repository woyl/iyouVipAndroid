<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="15dp"
    android:paddingTop="10dp"
    tools:ignore="RtlSymmetry">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/default_head_iv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:layout_marginStart="15dp"
        android:id="@+id/tv_name"
         android:paddingTop="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="用户名"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintLeft_toRightOf="@id/default_head_iv"

        tools:ignore="MissingConstraints" />
    <TextView
        android:layout_marginStart="15dp"
        android:id="@+id/tv_message"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        tools:text="这是最新的聊天消息。这是最新的聊天消息这是最新的聊天消息"
        android:textColor="@color/color_999999"
        android:textSize="13sp"
        android:singleLine="false"
        android:paddingEnd="15dp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/tv_name"
        app:layout_constraintLeft_toRightOf="@id/default_head_iv"
        tools:ignore="MissingConstraints" />
    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        tools:text="时间"
        android:textColor="@color/color_999999"
        android:textSize="13sp"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="MissingConstraints" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="65dp"
        android:layout_marginTop="20dp"
        android:visibility="invisible"
        android:background="@color/color_e5e5e5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/tv_message"
        app:layout_constraintTop_toBottomOf="@+id/default_head_iv"
        app:layout_constraintLeft_toRightOf="@+id/default_head_iv"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>