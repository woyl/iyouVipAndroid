<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_item_testuser"
    android:paddingLeft="15dp"
    android:paddingTop="22dp"
    android:layout_margin="1.5dp"
     android:paddingBottom="22dp"
    tools:ignore="MissingConstraints">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/number_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="名次"
        android:textColor="@color/color_ff000000"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@id/head_iv"
        app:layout_constraintTop_toTopOf="@id/head_iv" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/head_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:background="@drawable/default_head_iv"
        app:layout_constraintLeft_toRightOf="@id/number_tv" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="名字"
        android:textColor="@color/color_ff000000"
        app:layout_constraintBottom_toBottomOf="@id/head_iv"
        app:layout_constraintLeft_toRightOf="@id/head_iv"
        app:layout_constraintTop_toTopOf="@id/head_iv" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/percent_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="15dp"
        android:drawableRight="@drawable/more_iv"
        android:text="匹配度:"
        android:textColor="@color/color_999999"
        android:textSize="13sp"
        android:drawablePadding="5dp"
        app:layout_constraintBottom_toBottomOf="@id/head_iv"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/head_iv" />
</androidx.constraintlayout.widget.ConstraintLayout>