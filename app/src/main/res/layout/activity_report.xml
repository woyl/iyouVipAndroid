<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c111111"
    android:fillViewport="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/include_base_back_title" />


        <CheckBox
            android:textColor="@color/color_999999"
            android:id="@+id/info_1"
            style="@style/CheckBox_Report"
            android:layout_marginTop="21dp"
            android:text="头像、资料作假" />

        <CheckBox
            android:textColor="@color/color_999999"
            android:id="@+id/info_2"
            style="@style/CheckBox_Report"
            android:text="骚扰广告" />

        <CheckBox
            android:textColor="@color/color_999999"
            android:id="@+id/info_3"
            style="@style/CheckBox_Report"
            android:text="诈骗、托" />

        <CheckBox
            android:textColor="@color/color_999999"
            android:id="@+id/info_4"
            style="@style/CheckBox_Report"
            android:text="恶意骚扰、不文明言语" />

        <CheckBox
            android:textColor="@color/color_999999"
            android:id="@+id/info_5"
            style="@style/CheckBox_Report"
            android:text="发广告或推广消息" />

        <CheckBox
            android:textColor="@color/color_999999"
            android:id="@+id/info_6"
            style="@style/CheckBox_Report"
            android:text="色情低俗" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="3dp"
            android:text="图片证据(必填)"
            android:textColor="@color/color_999999"
            android:textSize="13sp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="30dp" />

        <TextView

            android:id="@+id/tv_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="50dp"
            android:alpha="0.5"
            android:background="@drawable/shape_base_btn_white_20dp"
            android:gravity="center"
            android:paddingTop="14dp"
            android:paddingBottom="14dp"
            android:text="确认"
            android:textColor="@color/c333333"
            android:textSize="16sp" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>