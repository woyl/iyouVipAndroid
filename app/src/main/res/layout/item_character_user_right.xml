<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="15dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp">

    <TextView
        android:textColor="@color/white"
        android:textSize="16sp"
        android:id="@+id/tv_rank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="15dp"
        android:textStyle="bold"
        tools:text="排名"/>

    <com.jfkj.im.view.CirImageView
        android:id="@+id/cir_head"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_toEndOf="@+id/tv_rank"
        android:src="@mipmap/img_avatar_01"/>
    <TextView
        android:textSize="14sp"
        android:id="@+id/tv_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/cir_head"
        android:layout_marginStart="15dp"
        android:maxWidth="90dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:layout_centerVertical="true"
        android:textColor="@color/white"
        tools:text="哈哈"/>

    <ImageView

        android:id="@+id/img_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="@mipmap/list_icon_more_gray"/>

    <TextView
        android:id="@+id/tv_match_pre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/img_back"
        android:layout_marginEnd="10dp"
        android:layout_centerVertical="true"
        android:textColor="#ff1ee8f4"
        tools:text="匹配度:20%"/>

</RelativeLayout>
