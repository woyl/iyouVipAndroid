<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    tools:context=".ui.activity.UserheadActivity">

    <include
        android:id="@+id/include_title"
        layout="@layout/include_title" />

    <TextView
        android:id="@+id/tv_unload_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="26dp"
        android:text="上传头像"
        android:textColor="@color/color_ffffff"
        android:textSize="23sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/include_title"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tv_hints"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="5dp"
        android:text="上传真实头像，让更多用户发现你"
        android:textColor="@color/color_ffffff"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_unload_head"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/add_user_iv"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:scaleType="fitXY"
        android:src="@drawable/add_user_iv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_hints"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/add_user_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:alpha="0.7"
        android:text="添加头像"
        android:textColor="@color/color_ffffff"
        app:layout_constraintLeft_toLeftOf="@+id/add_user_iv"
        app:layout_constraintRight_toRightOf="@+id/add_user_iv"
        app:layout_constraintTop_toBottomOf="@id/add_user_iv"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tv_write_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="40dp"
        android:text="填写昵称"
        android:textColor="@color/color_ffffff"
        android:textSize="23sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_user_tv"
        tools:ignore="MissingConstraints" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="40dp"
        android:text="(15字以内)"
        android:textColor="@color/color_ffffff"
        android:textSize="12sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_write_name"
        app:layout_constraintLeft_toRightOf="@+id/tv_write_name"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/et_write_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="50dp"
        android:alpha="0.7"
        android:background="@null"
        android:maxLength="15"
        android:hint="填写昵称"
        android:textColor="@color/color_ffffff"
        android:textColorHint="@color/color_ffffff"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_write_name"
        tools:ignore="MissingConstraints" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="50dp"
        android:background="@color/color_ffffff"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_write_name"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btn_enter"
        style="@style/btn_red"
        android:layout_marginTop="100dp"
        android:text="确认"
        app:layout_constraintTop_toBottomOf="@+id/et_write_name"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>