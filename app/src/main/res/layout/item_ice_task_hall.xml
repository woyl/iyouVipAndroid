<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.jfkj.im.view.CirImageView
            android:id="@+id/cir_head"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/img_avatar_02"/>
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:layout_marginStart="9dp"
            android:text="Blackpink"/>

        <TextView
            android:id="@+id/tv_vip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="VIP1"
            android:textColor="@color/white"
            android:paddingStart="5dp"
            android:visibility="gone"
            android:layout_marginStart="7dp"
            android:paddingEnd="5dp"
            android:layout_marginTop="2dp"
            android:paddingBottom="2dp"
            android:layout_gravity="center"
            android:background="@mipmap/icon_mine_vip_brg"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingTop="13dp"
        android:paddingBottom="13dp"
        android:background="@drawable/shap_item_ice_task_hall">

        <ImageView
            android:id="@+id/img_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:layout_centerVertical="true"
            android:layout_marginStart="12dp"
            tools:ignore="ContentDescription" />


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/img_head"
            android:layout_toStartOf="@+id/tv_state"
            android:layout_marginStart="14dp"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            tools:ignore="RtlHardcoded">
            <TextView
                android:id="@+id/tv_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:maxLines="2"
                tools:text="每位用户每日只能提交10次任务，超过上限点击"/>


            <TextView
                android:layout_marginTop="9dp"

                android:id="@+id/tv_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_content"

                android:textColor="@color/cEF4769"
                android:textSize="12sp"
                android:drawableStart="@mipmap/icon_diamond_yellow"
                tools:text="x500"/>

            <TextView
                android:layout_marginStart="13dp"
                android:layout_toEndOf="@+id/tv_money"
                android:layout_marginTop="9dp"
                android:id="@+id/tv_jiangli"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_below="@+id/tv_content"

                android:text="任务奖励"

                android:textSize="12sp"
                android:textColor="@color/line_btn" />


        </RelativeLayout>

        <TextView
            android:id="@+id/tv_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="去完成"
            android:textSize="12sp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="11dp"
            android:layout_alignParentEnd="true"
            android:textColor="@color/cFF2B66"
            android:layout_centerVertical="true"
            android:background="@drawable/stoke_red_three_bg"/>

    </RelativeLayout>

</LinearLayout>
