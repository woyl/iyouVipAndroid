<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="90dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_content"
    android:background="@mipmap/icon_pb_center_brg"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_1"
        android:layout_width="200dp"
        android:gravity="center"
        android:background="@drawable/shap_white_l_r_bg"
        android:layout_height="70dp">

        <ImageView
            android:id="@+id/img_1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="15dp"
            android:scaleType="fitXY"
            android:layout_marginBottom="15dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:orientation="vertical"
            tools:ignore="RtlSymmetry">
            <TextView
                android:id="@+id/tv_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="范德萨范德萨发生犯得上发射点"
                android:maxLines="2"
                android:textSize="12sp"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:drawableStart="@mipmap/task_gou"
                android:layout_marginTop="5dp"
                android:drawablePadding="6dp"
                android:textColor="#FF2B66"
                android:text="已提交任务"/>
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:visibility="gone"
        android:background="@color/color_E5E5E5"/>

    <TextView
        android:id="@+id/tv_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="6dp"
        android:visibility="gone"
        android:drawableStart="@mipmap/icom_fabulous"
        android:layout_marginBottom="6dp"
        android:layout_gravity="center"
        android:layout_marginEnd="15dp"
        android:textColor="@color/text_color_gray"
        android:text="点赞"/>

</LinearLayout>
