<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center"
    android:paddingTop="12dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iv_vip_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:layout_centerHorizontal="true"
        tools:background="@drawable/vip_3" />

    <TextView
        android:id="@+id/tv_vip_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_8659ff"
        android:textSize="13sp"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/iv_vip_icon"
        tools:text="vip3"/>

    <TextView
        android:id="@+id/tv_vip_permission"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_666666"
        android:textSize="11sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tv_vip_level"
        tools:text="vip3"/>

</RelativeLayout>